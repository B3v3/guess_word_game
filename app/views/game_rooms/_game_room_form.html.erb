<%= form_for @game_room do |f| %>
  <% if @game_room.errors.any? %>
     <% @game_room.errors.full_messages.each do |message| %>
       <div class="alert alert-danger" role="alert">
         <%= message %>
       </div>
     <% end %>
   <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <p> Your word: <%= @game_room.word.name %></p>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= hidden_field(:game_room, :word_id, value: @game_room.word_id) %>

  <%= f.submit :Submit, class: 'btn btn-success btn-lg btn-block' %>
<% end %>
